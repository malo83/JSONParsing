// Fonction pour transformer une liste JSON en un objet JSON simple
function transformerListeEnObjet(jsonArray) {
    const jsonObject = {};

    // Parcourir chaque élément du tableau
    jsonArray.forEach(item => {
        // Utiliser une clé unique, ici 'id', pour chaque objet
        jsonObject[item.id] = {
            title: item.title,
            calories: item.calories
        };
    });

    return jsonObject;
}
