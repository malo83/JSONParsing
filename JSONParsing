// Exemple d'entrée JSON sous forme de liste (tableau)
const jsonArray = [
    { "id": 1, "nom": "Alice", "age": 25 },
    { "id": 2, "nom": "Bob", "age": 30 },
    { "id": 3, "nom": "Charlie", "age": 35 }
];

// Fonction pour transformer la liste en objet JSON simple
function transformerListeEnObjet(liste) {
    const jsonObject = {};

    // Parcourir chaque élément du tableau
    liste.forEach(item => {
        // Utiliser une clé unique, ici 'id', pour chaque objet
        jsonObject[item.id] = {
            nom: item.nom,
            age: item.age
        };
    });

    return jsonObject;
}

// Appel de la fonction pour transformer la liste en objet
const jsonOutput = transformerListeEnObjet(jsonArray);

// Affichage du résultat
console.log(jsonOutput);
